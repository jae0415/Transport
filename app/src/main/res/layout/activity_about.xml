<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edwards2james.transportationanalysis_app.about"
    android:background="#ff000000">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onBackClick" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/road"
        android:id="@+id/imageView"
        android:layout_above="@+id/button4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Application"
        android:id="@+id/button8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#ffff0005"
        android:onClick="onappClick"
        android:clickable="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:id="@+id/button9"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button8"
        android:layout_centerHorizontal="true"
        android:background="#ffffd800"
        android:clickable="true"
        android:onClick="onexpenClick" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="About Data"
        android:id="@+id/button10"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="onabtdataClick"
        android:background="#ff1dff00"
        android:clickable="true" />


</RelativeLayout>
