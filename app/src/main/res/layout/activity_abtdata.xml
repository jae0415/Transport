<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.edwards2james.transportationanalysis_app.abtdata"
    android:background="#ff000000">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="About Page"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onAboutClick" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Expenses"
        android:id="@+id/button18"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/button11"
        android:layout_alignEnd="@+id/button11"
        android:background="#fffff600"
        android:onClick="onexpenClick" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Application"
        android:id="@+id/button19"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ff17ff00"
        android:onClick="onappClick" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The data you input is stored on your phone. It will keep a running track of the information you enter."
        android:id="@+id/textView7"
        android:textColor="#ffff0500"
        android:textSize="25dp"
        android:layout_above="@+id/button11"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
